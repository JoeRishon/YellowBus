<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="spash"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/download"
        tools:src="@drawable/download"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Driver location --"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude - "
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude -"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number of seats available --"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="size - "
            tools:text="@tools:sample/lorem" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your stop location --"
            tools:text="@tools:sample/lorem" /><![CDATA[



        //android:layout_constraintBottom_toBottomOf="parent"
      //android:layout_constraintLeft_toLeftOf="parent"
      //android:layout_constraintRight_toRightOf="parent"
      //android:layout_constraintTop_toTopOf="parent" />

        ]]>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnmap"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:text="Open In Google Maps" />

        <Button
            android:id="@+id/btnbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book A Seat" />


    </LinearLayout>
</LinearLayout>